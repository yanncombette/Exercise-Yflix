<div class="col-12 col-lg-3">
	<h2 class="text-center text-muted fw-bold mb-4">Les genres</h2>
	<ul class="d-flex flex-lg-column flex-wrap list-unstyled justify-content-center" id="genreList">
		{% for genre in genres %}
			<a href="{{ path('movie_list', {'genre': genre.name}) }}" class="btn {% if app.request.query.get('genre') == genre.name %}btn-danger{% else %}btn-outline-danger{% endif %} mb-2" role="button">{{ genre.name }}</a>
		{% endfor %}
	</ul>
</div>
